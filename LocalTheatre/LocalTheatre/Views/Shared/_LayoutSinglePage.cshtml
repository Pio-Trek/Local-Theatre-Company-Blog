@using LocalTheatre.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/favicons/favicon-16x16.png">
    <link rel="manifest" href="/images/favicons/manifest.json">
    <link rel="mask-icon" href="/images/favicons/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">

    <!-- Responsive -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport'/>

    <title>@ViewBag.Title - Local Theatre Company</title>

    <!-- Fonts and icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons"/>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"/>

    <!-- CSS Files -->
    @Styles.Render("~/Content/css")

    <!-- JS Files -->
    @Scripts.Render("~/bundles/modernizr")

</head>


<body class="signup-page">

<!-- start navbar -->
@Html.Partial("_Navbar")
<!-- end navbar -->

<div class="wrapper">
    <div class="header header-filter" id="backgroundImage" style="background-size: cover; background-position: top center;">
        <div class="container">

            @RenderBody()

        </div>

        <footer class="footer footer-transparent">
            <div class="container">
                <div class="social-area pull-right">
                    <a class="btn btn-social btn-twitter btn-just-icon btn-simple" href="">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a class="btn btn-social btn-facebook btn-just-icon btn-simple" href="">
                        <i class="fa fa-facebook-square"></i>
                    </a>
                    <a class="btn btn-social btn-google btn-just-icon btn-simple" href="">
                        <i class="fa fa-google-plus"></i>
                    </a>
                </div>
                <div class="copyright">
                    &copy; @DateTime.Now.Year &#x1F483; Local Theatre Company, mady by Piotr Przechodzki
                </div>
            </div>
        </footer>

    </div>

</div>


</body>

<!-- Core JS Files -->
<script src="https://www.gstatic.com/firebasejs/4.5.0/firebase.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/single-page")
@RenderSection("scripts", required: false)

</html>