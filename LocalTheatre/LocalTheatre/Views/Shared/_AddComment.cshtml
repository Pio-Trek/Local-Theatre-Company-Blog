@using Microsoft.AspNet.Identity
@model LocalTheatre.Models.Comment

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <a name="comments"></a>

    <div class="row">
        <div class="col-md-offset-2 col-md-6">
            <div class="form-group label-floating is-empty">
                <label class="control-label">Your Comment</label>
                @Html.EditorFor(model => model.Text, new {htmlAttributes = new {@class = "form-control",}})
                @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
                <span class="material-input"></span>
            </div>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-success">
                <i class="material-icons">add</i>Add Comment
            </button>
        </div>
    </div>

    <input type="hidden" value="@User.Identity.GetUserId()" name="AuthorId"/>
    <input type="hidden" value="@DateTime.Now" name="PublishDate"/>
    <input type="hidden" value="@Model.BlogId" name="BlogId"/>
    <input type="hidden" value="@Model.IsModerated = false" name="BlogId"/>
}