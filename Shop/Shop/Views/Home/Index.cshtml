@model IEnumerable<Shop.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Shop!</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p>
        <a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a>
    </p>
</div>

<div class="row">

    <form method="get">
        <input type="text" name="search"/>
        <input type="submit"/>
    </form>

    @foreach (var category in Model)
    {
        <div class="col-md-4">
            <h2 class="red">@category.Name</h2>
            <ul>
                @foreach (var products in category.Products)
                {
                    <li>@products.Name (@products.Price)</li>
                }
            </ul>
        </div>
    }
</div>